<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night variant: base on DayNight so it will pick night mode automatically.
         You can tweak colors here if you want different shades for dark mode. -->
    <style name="Theme.PokedexKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pokedex_red</item>
        <item name="colorPrimaryVariant">@color/pokedex_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_700</item>

        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>

        <item name="android:statusBarColor">@color/pokedex_red_dark</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

</resources>
