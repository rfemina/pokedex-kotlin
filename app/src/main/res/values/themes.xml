<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme (light / default) -->
    <style name="Theme.PokedexKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/pokedex_red</item>
        <item name="colorPrimaryVariant">@color/pokedex_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface / backgrounds -->
        <item name="colorSurface">@color/surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_700</item>

        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>

        <!-- Status / nav bar colors (applies on API 21+) -->
        <item name="android:statusBarColor">@color/pokedex_red_dark</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Use Material Components defaults for buttons, etc. -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Toolbar helper style -->
    <style name="Widget.MyApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/pokedex_red</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
